            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f8148d814cb3938cb88d12cce7cc831f42dc2445" />
        <meta-data
            android:name="com.example.poowadon.liveat500px.configuration.GlideConfiguration"
            android:value="GlideModule" />

        <activity
            android:name=".activity.MoreInfoActivity"
            android:theme="@style/AppThemeWithActionBar" />
        <activity android:name=".activity.TestActivity"></activity>
    </application>

</manifest>